{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": false,
    "module": "ESNext",
    "target": "es2015",
    "allowJs": true,
    "moduleResolution": "node",
    
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@assets/*": ["assets/*"],
      "@projconfig/*": ["config/*"],
      "@domain/*": ["src/domain/*"],
      "@utils/*": ["src/utils/*"],
    },

    "sourceMap": true
  },
  
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}